{
  "framework": "nextjs",
  "installCommand": "npm ci && npm run postinstall",
  "buildCommand": "npm run build",
  "env": {
    "NODE_ENV": "production",
    "NEXT_TELEMETRY_DISABLED": "1",
    "PRISMA_GENERATE_SKIP_AUTOINSTALL": "true"
  },
  "build": {
    "env": {
      "NODE_ENV": "production",
      "NEXT_TELEMETRY_DISABLED": "1",
      "PRISMA_GENERATE_SKIP_AUTOINSTALL": "true"
    }
  },
  "functions": {
    "app/api/**/*.js": {
      "maxDuration": 30
    }
  }
} 